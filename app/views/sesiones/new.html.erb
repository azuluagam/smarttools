<% provide(:title, "Ingresar") %>
<h1>Ingresar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: ingresar_path ) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Ingresar", class: "btn btn-primary" %>
    <% end %>

    <p>Usuario Nuevo? <%= link_to "Registrese ahora!", registro_path %></p>
  </div>
</div>
